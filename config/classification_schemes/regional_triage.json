{
  "scheme_name": "Basalt Provenance Triage (Egyptianâ€“Sinaiâ€“Levantine)",
  "version": "1.0",
  "author": "Sefy Levy",
  "date_created": "2025-02-07",
  "description": "THE ORIGINAL classification that started this toolkit - Archaeological basalt vessel provenance for Egyptian, Sinai, and Levantine sources",
  "category": "software",
  "icon": "ðŸŽ¯",
  "priority": 0,
  "reference": "Hartung 2017; Philip & Williams-Thorpe 2001; Williams-Thorpe & Thorpe 1993; Rosenberg et al. 2016",
  
  "requires_fields": [
    "Zr_ppm",
    "Nb_ppm",
    "Ba_ppm",
    "Rb_ppm",
    "Cr_ppm",
    "Ni_ppm",
    "Wall_Thickness_mm"
  ],
  
  "classifications": [
    {
      "name": "EGYPTIAN (HADDADIN FLOW)",
      "color": "blue",
      "description": "Egyptian Haddadin Flow basalt - thin-walled vessels from Nile sources",
      "priority": 1,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "between",
          "min": 7.0,
          "max": 12.0,
          "comment": "Characteristic Zr/Nb range for Haddadin"
        },
        {
          "field": "Ba_ppm",
          "operator": "between",
          "min": 240.0,
          "max": 300.0,
          "comment": "Barium range for Haddadin"
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": "between",
          "min": 1.1,
          "max": 1.6,
          "comment": "Cr/Ni ratio for Haddadin"
        },
        {
          "field": "Wall_Thickness_mm",
          "operator": "<",
          "value": 4.0,
          "comment": "Thin-walled vessels typical of Egyptian import"
        }
      ],
      "logic": "AND",
      "confidence_score": 4,
      "notes": "High-confidence match for Egyptian Haddadin Flow basalt"
    },
    {
      "name": "EGYPTIAN (ALKALINE / EXOTIC)",
      "color": "red",
      "description": "Egyptian alkaline or exotic basalt sources",
      "priority": 2,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": ">",
          "value": 22.0,
          "comment": "Very high Zr/Nb indicates alkaline source"
        },
        {
          "field": "Ba_ppm",
          "operator": ">",
          "value": 350.0,
          "comment": "Elevated barium"
        },
        {
          "field": "Wall_Thickness_mm",
          "operator": "<",
          "value": 4.0,
          "comment": "Thin-walled"
        }
      ],
      "logic": "AND",
      "confidence_score": 3,
      "notes": "Alkaline or exotic Egyptian sources"
    },
    {
      "name": "SINAI OPHIOLITIC",
      "color": "orange",
      "description": "Sinai ophiolitic basalt",
      "priority": 3,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": ">=",
          "value": 20.0,
          "comment": "High Zr/Nb for ophiolitic"
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": "between",
          "min": 1.8,
          "max": 2.3,
          "comment": "Characteristic Cr/Ni for ophiolitic"
        },
        {
          "field": "Ba_ppm",
          "operator": "<=",
          "value": 150.0,
          "comment": "Low barium"
        },
        {
          "field": "Rb_ppm",
          "operator": "<=",
          "value": 30.0,
          "comment": "Low rubidium"
        }
      ],
      "logic": "AND",
      "confidence_score": 4,
      "notes": "Sinai ophiolitic sequence basalt"
    },
    {
      "name": "SINAI / TRANSITIONAL",
      "color": "orange",
      "description": "Sinai or transitional basalt",
      "priority": 4,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "between",
          "min": 15.0,
          "max": 22.0,
          "comment": "Mid-range Zr/Nb for Sinai/transitional"
        }
      ],
      "logic": "AND",
      "confidence_score": 1,
      "notes": "Sinai or transitional sources - lower confidence"
    },
    {
      "name": "LOCAL LEVANTINE",
      "color": "green",
      "description": "Local Levantine sources (Golan, Galilee, Hula)",
      "priority": 5,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "<",
          "value": 15.0,
          "comment": "Low Zr/Nb for local sources"
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": ">",
          "value": 2.5,
          "comment": "High Cr/Ni for Levantine"
        },
        {
          "field": "Ba_ppm",
          "operator": "<",
          "value": 200.0,
          "comment": "Low barium"
        },
        {
          "field": "Wall_Thickness_mm",
          "operator": ">",
          "value": 4.5,
          "comment": "Thick-walled vessels typical of local production"
        }
      ],
      "logic": "AND",
      "confidence_score": 4,
      "notes": "Local Levantine basalt - Golan, Galilee, or Hula sources"
    },
    {
      "name": "REVIEW REQUIRED",
      "color": "gray",
      "description": "Sample does not match any known classification or has missing data",
      "priority": 999,
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 1,
      "notes": "Default classification when no other matches - review manually"
    }
  ],
  
  "output_column_name": "Auto_Classification",
  "add_confidence_column": true,
  "confidence_column_name": "Auto_Confidence",
  "flag_uncertain": true,
  "uncertain_threshold": 2,
  "flag_column_name": "Flag_For_Review"
}
