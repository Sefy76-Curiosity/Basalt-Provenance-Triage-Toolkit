{
  "scheme_name": "Basalt Provenance Triage (Egyptianâ€“Sinaiâ€“Levantine)",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-07",
  "description": "Geochemical provenance classification for Egyptian, Sinai, and Levantine basalt sources",
  "category": "software",
  "icon": "ðŸŽ¯",
  "priority": 0,
  "reference": "Hartung 2017; Philip & Williams-Thorpe 2001; Williams-Thorpe & Thorpe 1993; Rosenberg et al. 2016",

  "requires_fields": [
    "Zr_ppm",
    "Nb_ppm",
    "Ba_ppm",
    "Rb_ppm",
    "Cr_ppm",
    "Ni_ppm"
  ],

  "classifications": [
    {
      "name": "EGYPTIAN (HADDADIN FLOW)",
      "color": "blue",
      "description": "Egyptian Haddadin Flow basalt",
      "priority": 1,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "between",
          "min": 7.0,
          "max": 12.0
        },
        {
          "field": "Ba_ppm",
          "operator": "between",
          "min": 240.0,
          "max": 300.0
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": "between",
          "min": 1.1,
          "max": 1.6
        }
      ],
      "logic": "AND",
      "confidence_score": 4
    },
    {
      "name": "EGYPTIAN (ALKALINE / EXOTIC)",
      "color": "red",
      "description": "Egyptian alkaline or exotic basalt sources",
      "priority": 2,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": ">",
          "value": 22.0
        },
        {
          "field": "Ba_ppm",
          "operator": ">",
          "value": 350.0
        }
      ],
      "logic": "AND",
      "confidence_score": 3
    },
    {
      "name": "SINAI OPHIOLITIC",
      "color": "orange",
      "description": "Sinai ophiolitic basalt",
      "priority": 3,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": ">=",
          "value": 20.0
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": "between",
          "min": 1.8,
          "max": 2.3
        },
        {
          "field": "Ba_ppm",
          "operator": "<=",
          "value": 150.0
        },
        {
          "field": "Rb_ppm",
          "operator": "<=",
          "value": 30.0
        }
      ],
      "logic": "AND",
      "confidence_score": 4
    },
    {
      "name": "SINAI / TRANSITIONAL",
      "color": "orange",
      "description": "Sinai or transitional basalt",
      "priority": 4,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "between",
          "min": 15.0,
          "max": 22.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1
    },
    {
      "name": "LOCAL LEVANTINE",
      "color": "green",
      "description": "Local Levantine sources (Golan, Galilee, Hula)",
      "priority": 5,
      "rules": [
        {
          "field": "Zr_Nb_Ratio",
          "operator": "<",
          "value": 15.0
        },
        {
          "field": "Cr_Ni_Ratio",
          "operator": ">",
          "value": 2.5
        },
        {
          "field": "Ba_ppm",
          "operator": "<",
          "value": 200.0
        }
      ],
      "logic": "AND",
      "confidence_score": 4
    },
    {
      "name": "REVIEW REQUIRED",
      "color": "gray",
      "description": "Sample does not match any known classification or has missing data",
      "priority": 999,
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 1
    }
  ],

  "output_column_name": "Auto_Classification",
  "add_confidence_column": true,
  "confidence_column_name": "Auto_Confidence",
  "flag_uncertain": true,
  "uncertain_threshold": 2,
  "flag_column_name": "Flag_For_Review"
}
