{
  "scheme_name": "Pearce Nb/Ybâ€“Th/Yb Mantle Array Proxy",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Distinguish MORB, OIB, arc basalts, and crustal contamination using mantle array diagrams",
  "category": "software",
  "icon": "ðŸ”ï¸",
  "reference": "Pearce, 2008 (mantle array diagrams)",
  "field": "Tectonic Geochemistry",

  "requires_fields": [
    "Nb_ppm",
    "Yb_ppm",
    "Th_ppm"
  ],

  "classifications": [
    {
      "name": "PLUME/OIB AFFINITY (Nb/Yb > 10)",
      "color": "purple",
      "rules": [
        {
          "field": "Nb_Yb_Ratio",
          "operator": ">",
          "value": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "CRUSTAL CONTAMINATION (High Th/Yb)",
      "color": "red",
      "rules": [
        {
          "field": "Th_Yb_Ratio",
          "operator": ">",
          "value": 2.0
        },
        {
          "field": "Nb_Yb_Ratio",
          "operator": "<=",
          "value": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "DEPLETED MORB-LIKE",
      "color": "blue",
      "rules": [
        {
          "field": "Nb_Yb_Ratio",
          "operator": "between",
          "min": 0.5,
          "max": 2.0
        },
        {
          "field": "Th_Yb_Ratio",
          "operator": "<",
          "value": 0.5
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "ENRICHED MORB / TRANSITIONAL",
      "color": "cyan",
      "rules": [
        {
          "field": "Nb_Yb_Ratio",
          "operator": "between",
          "min": 2.0,
          "max": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "INSUFFICIENT DATA",
      "color": "gray",
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "Tectonic_Setting",
  "add_confidence_column": true
}
