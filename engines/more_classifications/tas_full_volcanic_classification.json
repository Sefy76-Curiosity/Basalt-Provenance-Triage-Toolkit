{
  "scheme_name": "TAS Full Volcanic Classification",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "IUGS standard classification of volcanic rocks using Total Alkalis (Na2O + K2O) vs. Silica (SiO2)",
  "category": "software",
  "icon": "ðŸŒ‹",
  "reference": "Le Maitre et al. (2002). Igneous Rocks: A Classification and Glossary of Terms.",
  "field": "Igneous Petrology",

  "requires_fields": [
    "SiO2_wt",
    "Na2O_wt",
    "K2O_wt"
  ],

  "classifications": [
    {
      "name": "BASALT",
      "color": "#4CAF50",
      "description": "Mafic volcanic rock (SiO2 45â€“52%, Total Alkalis < 5%)",
      "priority": 1,
      "rules": [
        { "field": "SiO2_wt", "operator": "between", "min": 45.0, "max": 52.0 },
        { "field": "Na2O_wt+K2O_wt", "operator": "<", "value": 5.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.95
    },
    {
      "name": "BASALTIC ANDESITE",
      "color": "#8BC34A",
      "description": "Intermediate-mafic rock (SiO2 52â€“57%)",
      "priority": 2,
      "rules": [
        { "field": "SiO2_wt", "operator": "between", "min": 52.0, "max": 57.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "ANDESITE",
      "color": "#CDDC39",
      "description": "Intermediate volcanic rock (SiO2 57â€“63%)",
      "priority": 3,
      "rules": [
        { "field": "SiO2_wt", "operator": "between", "min": 57.0, "max": 63.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "DACITE",
      "color": "#FFC107",
      "description": "Felsic volcanic rock (SiO2 63â€“77%)",
      "priority": 4,
      "rules": [
        { "field": "SiO2_wt", "operator": "between", "min": 63.0, "max": 77.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "RHYOLITE",
      "color": "#F44336",
      "description": "Highly felsic rock (SiO2 > 77%)",
      "priority": 5,
      "rules": [
        { "field": "SiO2_wt", "operator": ">", "value": 77.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.95
    },
    {
      "name": "INSUFFICIENT GEOCHEMICAL DATA",
      "color": "#9E9E9E",
      "description": "Missing SiO2 or Total Alkali data",
      "priority": 999,
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "IUGS_Volcanic_Class",
  "add_confidence_column": true,
  "confidence_column_name": "Auto_Confidence",
  "flag_uncertain": true,
  "uncertain_threshold": 0.85,
  "flag_column_name": "Flag_For_Review"
}
