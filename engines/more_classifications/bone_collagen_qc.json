{
  "scheme_name": "Bone Collagen Quality (C:N Standard)",
  "version": "1.1",
  "author": "Sefy Levy",
  "description": "Standard QC check for collagen preservation in archaeological bone",
  "category": "bone_chemistry",
  "icon": "ðŸ¦´",

  "requires_fields": [
    "C_pct",
    "N_pct",
    "C_N_Ratio"
  ],

  "classifications": [
    {
      "name": "PRESERVED (PASS)",
      "color": "green",
      "rules": [
        {
          "field": "C_N_Ratio",
          "operator": "between",
          "min": 2.9,
          "max": 3.6
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "DEGRADED / CONTAMINATED",
      "color": "red",
      "rules": [
        {
          "field": "C_N_Ratio",
          "operator": "not_between",
          "min": 2.9,
          "max": 3.6
        }
      ],
      "logic": "OR",
      "confidence_score": 1.0
    }
  ],

  "output_column_name": "Collagen_Status"
}
