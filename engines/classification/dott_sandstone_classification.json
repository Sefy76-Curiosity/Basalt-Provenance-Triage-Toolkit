{
  "scheme_name": "Dott Sandstone Classification (QFL with Textural Maturity)",
  "version": "1.0",
  "author": "Sefy Levy",
  "date_created": "2026-02-21",
  "description": "Classify sandstones by QFL composition AND textural maturity (argillaceous matrix content) after Dott (1964)",
  "category": "software",
  "icon": "ðŸ§±",
  "reference": "Dott, R.H. (1964). Wacke, graywacke and matrixâ€”what approach to immature sandstone classification? Journal of Sedimentary Research, 34(3), 625-632.",
  "field": "Sedimentology",

  "requires_fields": [
    "Q_pct",
    "F_pct",
    "L_pct",
    "Matrix_pct"
  ],

  "classifications": [
    {
      "name": "QUARTZ ARENITE",
      "color": "#4CAF50",
      "description": "Q > 95%, matrix < 15%; supermature",
      "priority": 1,
      "rules": [
        { "field": "Q_pct", "operator": ">", "value": 95.0 },
        { "field": "Matrix_pct", "operator": "<", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.95
    },
    {
      "name": "SUBARKOSE",
      "color": "#8BC34A",
      "description": "Q 75â€“95%, F > L, matrix < 15%",
      "priority": 2,
      "rules": [
        { "field": "Q_pct", "operator": "between", "min": 75.0, "max": 95.0 },
        { "field": "F_pct", "operator": ">", "value": "L_pct" },
        { "field": "Matrix_pct", "operator": "<", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "SUBLITHARENITE",
      "color": "#CDDC39",
      "description": "Q 75â€“95%, L > F, matrix < 15%",
      "priority": 3,
      "rules": [
        { "field": "Q_pct", "operator": "between", "min": 75.0, "max": 95.0 },
        { "field": "L_pct", "operator": ">", "value": "F_pct" },
        { "field": "Matrix_pct", "operator": "<", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "ARKOSE",
      "color": "#FFC107",
      "description": "Q < 75%, F > 25%, F > L, matrix < 15%",
      "priority": 4,
      "rules": [
        { "field": "Q_pct", "operator": "<", "value": 75.0 },
        { "field": "F_pct", "operator": ">", "value": 25.0 },
        { "field": "F_pct", "operator": ">", "value": "L_pct" },
        { "field": "Matrix_pct", "operator": "<", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "LITHIC ARENITE",
      "color": "#FF9800",
      "description": "Q < 75%, L > 25%, L > F, matrix < 15%",
      "priority": 5,
      "rules": [
        { "field": "Q_pct", "operator": "<", "value": 75.0 },
        { "field": "L_pct", "operator": ">", "value": 25.0 },
        { "field": "L_pct", "operator": ">", "value": "F_pct" },
        { "field": "Matrix_pct", "operator": "<", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "QUARTZ WACKE",
      "color": "#2196F3",
      "description": "Q > 75%, matrix â‰¥ 15%",
      "priority": 6,
      "rules": [
        { "field": "Q_pct", "operator": ">", "value": 75.0 },
        { "field": "Matrix_pct", "operator": ">=", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.85
    },
    {
      "name": "ARKOSIC WACKE",
      "color": "#9C27B0",
      "description": "F > L, F > 25% (or F > L regardless), matrix â‰¥ 15%",
      "priority": 7,
      "rules": [
        { "field": "F_pct", "operator": ">", "value": "L_pct" },
        { "field": "Matrix_pct", "operator": ">=", "value": 15.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.85
    },
    {
      "name": "LITHIC WACKE",
      "color": "#673AB7",
      "description": "L > F, matrix â‰¥ 15%",
      "priority": 8,
      "rules": [
