{
  "scheme_name": "Analytical Precision Filter (RSD‑Based)",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Identify unreliable pXRF/XRF measurements using relative standard deviation",
  "category": "software",
  "icon": "✅",
  "reference": "Potts & West, 2008; NIST XRF QA/QC guidelines",
  "field": "Field Triage / QA–QC",

  "requires_fields": [
    "Zr_ppm",
    "Zr_error"
  ],

  "classifications": [
    {
      "name": "RESEARCH GRADE (RSD < 3%)",
      "color": "#4CAF50",
      "description": "High-quality data suitable for research publication",
      "priority": 1,
      "rules": [
        {
          "field": "Zr_RSD",
          "operator": "<",
          "value": 0.03
        }
      ],
      "logic": "AND",
      "confidence_score": 0.95
    },
    {
      "name": "SCREENING GRADE (3-7%)",
      "color": "#FFC107",
      "description": "Acceptable for screening and triage",
      "priority": 2,
      "rules": [
        {
          "field": "Zr_RSD",
          "operator": "between",
          "min": 0.03,
          "max": 0.07
        }
      ],
      "logic": "AND",
      "confidence_score": 0.70
    },
    {
      "name": "NON-QUANTIFIABLE (RSD > 7%)",
      "color": "#F44336",
      "description": "High uncertainty",
      "priority": 3,
      "rules": [
        {
          "field": "Zr_RSD",
          "operator": ">",
          "value": 0.07
        }
      ],
      "logic": "AND",
      "confidence_score": 0.30
    },
    {
      "name": "NO ERROR DATA",
      "color": "#9E9E9E",
      "description": "Missing uncertainty data",
      "priority": 999,
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "Auto_Classification",
  "add_confidence_column": true,
  "confidence_column_name": "Auto_Confidence",
  "flag_uncertain": true,
  "uncertain_threshold": 0.07,
  "flag_column_name": "Flag_For_Review"
}
