{
  "scheme_name": "Anhydrous Majorâ€‘Oxide Normalization (TAS Standard)",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Prepare major oxides for TAS, AFM, and petrogenetic diagrams following IUGS standards",
  "category": "software",
  "icon": "ðŸ”¬",
  "reference": "Le Maitre (IUGS), 2002",
  "field": "Igneous Petrology",

  "requires_fields": [
    "SiO2_wt",
    "TiO2_wt",
    "Al2O3_wt",
    "Fe2O3_T_wt",
    "MgO_wt",
    "CaO_wt",
    "Na2O_wt",
    "K2O_wt"
  ],

  "classifications": [
    {
      "name": "BASALT (SiO2 < 52%)",
      "color": "green",
      "description": "Basaltic composition (TAS classification)",
      "priority": 1,
      "rules": [
        {
          "field": "SiO2_wt",
          "operator": "<",
          "value": 52.0
        }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "BASALTIC ANDESITE (52-57%)",
      "color": "limegreen",
      "description": "Basaltic andesite composition",
      "priority": 2,
      "rules": [
        {
          "field": "SiO2_wt",
          "operator": "between",
          "min": 52.0,
          "max": 57.0
        }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "ANDESITE (57-63%)",
      "color": "yellowgreen",
      "description": "Andesitic composition",
      "priority": 3,
      "rules": [
        {
          "field": "SiO2_wt",
          "operator": "between",
          "min": 57.0,
          "max": 63.0
        }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "DACITE (63-69%)",
      "color": "goldenrod",
      "description": "Dacitic composition",
      "priority": 4,
      "rules": [
        {
          "field": "SiO2_wt",
          "operator": "between",
          "min": 63.0,
          "max": 69.0
        }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "RHYOLITE (SiO2 > 69%)",
      "color": "red",
      "description": "Rhyolitic composition",
      "priority": 5,
      "rules": [
        {
          "field": "SiO2_wt",
          "operator": ">",
          "value": 69.0
        }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "INSUFFICIENT DATA",
      "color": "gray",
      "description": "Missing major oxide data",
      "priority": 999,
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "TAS_Classification",
  "add_confidence_column": true
}
