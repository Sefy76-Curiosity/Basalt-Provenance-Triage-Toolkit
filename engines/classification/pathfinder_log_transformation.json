{
  "scheme_name": "Pathfinder Log‑Transformation (Anomaly Detection)",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Highlight ore anomalies using log-transformation of pathfinder elements",
  "category": "software",
  "icon": "⚒️",
  "reference": "Levinson, 1974; standard geochemical exploration practice",
  "field": "Economic Geology / Exploration",

  "requires_fields": [
    "Cu_ppm"
  ],

  "classifications": [
    {
      "name": "BACKGROUND (<10 ppm Cu)",
      "color": "green",
      "rules": [
        {
          "field": "Cu_ppm",
          "operator": "<",
          "value": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "WEAK ANOMALY (10-50 ppm)",
      "color": "limegreen",
      "rules": [
        {
          "field": "Cu_ppm",
          "operator": "between",
          "min": 10.0,
          "max": 50.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "MODERATE ANOMALY (50-200 ppm)",
      "color": "goldenrod",
      "rules": [
        {
          "field": "Cu_ppm",
          "operator": "between",
          "min": 50.0,
          "max": 200.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "STRONG ANOMALY (200-1000 ppm)",
      "color": "orange",
      "rules": [
        {
          "field": "Cu_ppm",
          "operator": "between",
          "min": 200.0,
          "max": 1000.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "ORE GRADE (>1000 ppm)",
      "color": "red",
      "rules": [
        {
          "field": "Cu_ppm",
          "operator": ">",
          "value": 1000.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "NO DATA",
      "color": "gray",
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "Anomaly_Status",
  "add_confidence_column": true
}
