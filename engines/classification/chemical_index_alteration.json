{
  "scheme_name": "Chemical Index of Alteration (CIA)",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Assess chemical weathering and alteration state of samples",
  "category": "software",
  "icon": "üèõÔ∏è",
  "reference": "Nesbitt & Young, 1982",
  "field": "Museum Conservation / Paleoweathering",

  "requires_fields": [
    "Al2O3_wt",
    "CaO_wt",
    "Na2O_wt",
    "K2O_wt"
  ],

  "classifications": [
    {
      "name": "UNWEATHERED (CIA < 50)",
      "color": "green",
      "rules": [
        {
          "field": "CIA_Value",
          "operator": "<",
          "value": 50.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "SLIGHT WEATHERING (50-65)",
      "color": "limegreen",
      "rules": [
        {
          "field": "CIA_Value",
          "operator": "between",
          "min": 50.0,
          "max": 65.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "MODERATE WEATHERING (65-80)",
      "color": "goldenrod",
      "rules": [
        {
          "field": "CIA_Value",
          "operator": "between",
          "min": 65.0,
          "max": 80.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "STRONG ALTERATION (CIA > 80)",
      "color": "red",
      "rules": [
        {
          "field": "CIA_Value",
          "operator": ">",
          "value": 80.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "INSUFFICIENT DATA",
      "color": "gray",
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "Weathering_State",
  "add_confidence_column": true
}
