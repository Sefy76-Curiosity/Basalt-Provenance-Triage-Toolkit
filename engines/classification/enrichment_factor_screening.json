{
  "scheme_name": "Enrichment Factor (EF) Screening vs UCC",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2025-02-08",
  "description": "Detect anthropogenic heavy‚Äëmetal enrichment using Upper Continental Crust baseline",
  "category": "software",
  "icon": "üåç",
  "reference": "Gromet et al. 1984; Taylor & McLennan 1995",
  "field": "Environmental Geochemistry",

  "requires_fields": [
    "Pb_ppm"
  ],

  "classifications": [
    {
      "name": "BACKGROUND (EF < 2)",
      "color": "green",
      "rules": [
        {
          "field": "Pb_EF",
          "operator": "<",
          "value": 2.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "MINOR ENRICHMENT (EF 2-5)",
      "color": "limegreen",
      "rules": [
        {
          "field": "Pb_EF",
          "operator": "between",
          "min": 2.0,
          "max": 5.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "MODERATE ENRICHMENT (EF 5-10)",
      "color": "goldenrod",
      "rules": [
        {
          "field": "Pb_EF",
          "operator": "between",
          "min": 5.0,
          "max": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "EXTREME ENRICHMENT (EF > 10)",
      "color": "red",
      "rules": [
        {
          "field": "Pb_EF",
          "operator": ">",
          "value": 10.0
        }
      ],
      "logic": "AND",
      "confidence_score": 1.0
    },
    {
      "name": "NO DATA",
      "color": "gray",
      "rules": [],
      "logic": "DEFAULT",
      "confidence_score": 0.0
    }
  ],

  "output_column_name": "Enrichment_Status",
  "add_confidence_column": true
}
