  "classifications": [
    {
      "name": "SAND (Shepard)",
      "color": "#FFC107",
      "description": "Dominantly sand-sized particles (>85% sand)",
      "priority": 1,
      "rules": [
        { "field": "Sand_pct", "operator": ">", "value": 85.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.95
    },
    {
      "name": "SILT (Shepard)",
      "color": "#8BC34A",
      "description": "Dominantly silt-sized particles (>60% silt)",
      "priority": 2,
      "rules": [
        { "field": "Silt_pct", "operator": ">", "value": 60.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "CLAY (Shepard)",
      "color": "#3F51B5",
      "description": "Dominantly clay-sized particles (>40% clay)",
      "priority": 3,
      "rules": [
        { "field": "Clay_pct", "operator": ">", "value": 40.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },

    {
      "name": "SANDY MUD (Shepard)",
      "color": "#9C27B0",
      "description": "Mud-dominated sediment with 20â€“50% sand",
      "priority": 4,
      "rules": [
        { "field": "Sand_pct", "operator": "between", "min": 20.0, "max": 50.0 },
        { "field": "Clay_pct+Silt_pct", "operator": ">", "value": 50.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.85
    },
    {
      "name": "MUDDY SAND (Shepard)",
      "color": "#009688",
      "description": "Sand-dominated sediment with 10â€“20% mud",
      "priority": 5,
      "rules": [
        { "field": "Sand_pct", "operator": ">", "value": 50.0 },
        { "field": "Clay_pct+Silt_pct", "operator": "between", "min": 10.0, "max": 20.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.85
    },

    {
      "name": "ARENITE (Folk)",
      "color": "#F44336",
      "description": "Sandstone with <15% matrix; texturally mature",
      "priority": 6,
      "rules": [
        { "field": "Clay_pct+Silt_pct", "operator": "<", "value": 15.0 },
        { "field": "Sand_pct", "operator": ">", "value": 85.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.90
    },
    {
      "name": "WACKE (Folk)",
      "color": "#FF9800",
      "description": "Sandstone with >15% matrix; texturally immature",
      "priority": 7,
      "rules": [
        { "field": "Clay_pct+Silt_pct", "operator": ">=", "value": 15.0 },
        { "field": "Sand_pct", "operator": ">", "value": 50.0 }
      ],
      "logic": "AND",
      "confidence_score": 0.85
    },

    {
