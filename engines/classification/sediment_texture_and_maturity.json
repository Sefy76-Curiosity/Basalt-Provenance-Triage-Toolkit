{
  "scheme_name": "Sediment Texture and Maturity Classification",
  "version": "1.1",
  "author": "Sefy Levy",
  "date_created": "2026-02-21",
  "description": "Combined Shepard ternary, Folk sandstone, sorting, roundness, and sphericity classifications",
  "category": "software",
